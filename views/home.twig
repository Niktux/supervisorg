{% extends 'admin/common/body.twig' %}

{% block title %}Supervisorg{% endblock %}
{% block skin %}skin-purple{% endblock %}

{% block header %}
    {% include 'header.twig' %}
{% endblock %}

{% block sidebar %}
    {% include 'sidebar.twig' %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <form class="form-inline">
                <div class="form-group">
                    <div class="input-group">
                        <input type="email" class="form-control" id="process-search" placeholder="Process or state">
                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </form>

        </div>
    </div>
    {% for server in servers %}
    <h3><i class="fa fa-server"></i> {{ server.name }}</h3>
    <div class="row">
        {% for process in server.processList %}
            {% embed 'partials/process_tile.twig' %}{% endembed %}
        {% endfor %}
    </div>
    {% endfor %}
{% endblock %}


{% block specificsJavascripts %}
{% javascripts
    '../assets/js/libs/mousetrap.min.js'
    '../assets/js/libs/jquery.countdown360.min.js'
    '../assets/js/timer.js'
    '../assets/js/search.js'
%}
<script type="text/javascript" src="/{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock specificsJavascripts %}
